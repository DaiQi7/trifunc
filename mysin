
sin45=mysin(pi/4);

function y=mysin(num2)  
    i=1;
    negation=1;%取反
    sum=1;
    index=num2;%指数
    Factorial=1;%阶乘
    TaylorExpansion=num2;%泰勒展开式求和
while myabs(sum)>1e-5
    
         Factorial=Factorial*(i+1)*(i+2);%求阶乘
         index=index*num2*num2;%求num2的次方
         negation=-negation;%每次循环取反
         sum=index/Factorial*negation;
         TaylorExpansion=TaylorExpansion+sum;
         i=i+2;
end
     y=TaylorExpansion;
end
 
%下面为求绝对值函数
function y=myabs(num1)
if num1>0
    y=num1;
else
    y=-num1; 
end
end
