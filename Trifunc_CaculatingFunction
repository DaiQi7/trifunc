
mysin60=mysin(pi/3);
mycos60=mycos(pi/3);
myarctan1=myarctan(1);
mytan1=mytan(pi/3);

function y=mysin(num2)  
    i=1;
    negation=1;%取反
    sum=1;
    index=num2;%指数
    Factorial=1;%阶乘
    TaylorExpansion=num2;%泰勒展开式求和
while myabs(sum)>1e-10
    
         Factorial=Factorial*(i+1)*(i+2);%求阶乘
         index=index*num2*num2;%求num2的次方
         negation=-negation;%每次循环取反
         sum=index/Factorial*negation;
         TaylorExpansion=TaylorExpansion+sum;
         i=i+2;
end
     y=TaylorExpansion;
end


function y=mycos(num2)  
    i=0;
    negation=1;%取反
    sum=1;
    index=1;%指数
    Factorial=1;%阶乘
    TaylorExpansion=1;%泰勒展开式求和
while myabs(sum)>1e-10
    
         Factorial=Factorial*(i+1)*(i+2);%求阶乘
         index=index*num2*num2;%求num2的次方
         negation=-negation;%每次循环取反
         sum=index/Factorial*negation;
         TaylorExpansion=TaylorExpansion+sum;
         i=i+2;
end
     y=TaylorExpansion;
end

function y=myarctan(num2)  
    i=1;
    negation=1;%取反
    sum=1;
    index=1;%指数
    Factorial=1;%阶乘
    TaylorExpansion=num2;%泰勒展开式求和
while myabs(sum)>1e-10
    
         Factorial=2*i+1;%求阶乘
         index=index*num2*num2;%求num2的次方
         negation=-negation;%每次循环取反
         sum=index/Factorial*negation;
         TaylorExpansion=TaylorExpansion+sum;
         i=i+1;
end
     y=TaylorExpansion/pi*180;
end


function y=mytan(num2)
        
    y=mysin(num2)/mycos(num2);
end
    

%下面为求绝对值函数
function y=myabs(num1)
if num1>0
    y=num1;
else
    y=-num1; 
end
end
